class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int i = 0,j = 0;

        int n = s.length();
        unordered_map<char,int> mymap;
        int maxi  = 0;

        while(j<n){
            if(mymap.find(s[j]) != mymap.end() && mymap[s[j]]>=i){
                i = mymap[s[j]] + 1;
            }

            mymap[s[j]] = j;
            maxi = max(maxi,j-i+1);
            j++;
        }

        return maxi;
    }
};

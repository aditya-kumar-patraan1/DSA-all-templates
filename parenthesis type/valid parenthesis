class Solution {
public:
    bool isValid(string s) {
        stack<char> stk;

        for(int i=0;i<s.length();i++){
            
            char ch = s[i];

            if(ch=='{' || ch=='[' || ch=='(' || stk.empty()){
                stk.push(ch);
            }
            else{
                if(s[i]==')' && stk.top()=='('){
                    stk.pop();
                }
                else if(s[i]==']' && stk.top()=='['){
                    stk.pop();
                }
                else if(s[i]=='}' && stk.top()=='{'){
                    stk.pop();
                }
                else{
                    return false;
                }
            }
        }
        return stk.empty();
    }
};
